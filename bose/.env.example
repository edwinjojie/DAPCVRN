# MongoDB Configuration
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# For Local MongoDB: mongodb://localhost:27017/<database>
MONGODB_URI=mongodb://localhost:27017/bose
DB_NAME=bose_db

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Hyperledger Fabric Configuration
FABRIC_CHANNEL_NAME=credentialchannel
FABRIC_CHAINCODE_NAME=credential-contract
FABRIC_NETWORK_PATH=./fabric-network
FABRIC_WALLET_PATH=./wallet
FABRIC_MSP_ID=Org1MSP
FABRIC_PEER_ENDPOINT=localhost:7051
FABRIC_ORDERER_ENDPOINT=localhost:7050

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

